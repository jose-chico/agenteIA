{
  "name": "chat-system-api",
  "version": "1.0.0",
  "description": "Backend API para Sistema de Chat com Pagamentos e Recuperação de Senha",
  "main": "dist/server.js",
  "engines": {
    "node": ">=20.x"
  },
  "scripts": {
    "build": "prisma generate && tsc && tsc-alias",
    "migrate:dev": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "prisma:generate": "prisma generate",
    "dev": "ts-node-dev -r tsconfig-paths/register --exit-child --transpile-only --ignore-watch node_modules --ignore-watch dist --respawn ./src/server.ts",
    "start": "node dist/server.js",
    "seed": "node prisma/seed.js",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix"
  },
  "dependencies": {
    "@prisma/client": "^6.1.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.1",
    "module-alias": "^2.3.4",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.12",
    "socket.io": "^4.8.3",
    "stripe": "^14.0.0",
    "web-push": "^3.6.7",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.4.5",
    "@types/nodemailer": "^6.4.14",
    "@types/socket.io": "^3.0.2",
    "@types/web-push": "^3.6.4",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.45.0",
    "prisma": "^6.1.0",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
